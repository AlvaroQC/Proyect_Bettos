<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoss"
    tools:context=".view.ui.TipoPagoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titlecompraexitosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:text="METODOS DE PAGO"
            android:textAlignment="center"
            android:textColor="@color/md_blue_50"
            android:textSize="33sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtcomentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Elije tu metodo de pago:"
            android:textAlignment="center"
            android:textColor="@color/md_white_1000"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgdebito"
                android:layout_width="120dp"
                android:layout_height="103dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.595"
                app:srcCompat="@drawable/debito"
                tools:ignore="ContentDescription,ImageContrastCheck"
                tools:srcCompat="@drawable/debito" />

            <Button
                android:id="@+id/btndebito"
                android:layout_width="240dp"
                android:layout_height="81dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/md_cyan_500"
                android:text="Tarjeta Debito"
                android:textColor="@color/md_white_1000"
                android:textSize="22sp"
                app:cornerRadius="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgcredito"
                android:layout_width="120dp"
                android:layout_height="103dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.595"
                app:srcCompat="@drawable/credito"
                tools:ignore="ContentDescription,ImageContrastCheck"
                tools:srcCompat="@drawable/credito" />

            <Button
                android:id="@+id/btncredito"
                android:layout_width="240sp"
                android:layout_height="81dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/md_cyan_500"
                android:text="Tarjeta Credito"
                android:textColor="@color/md_white_1000"
                android:textSize="22sp"
                app:cornerRadius="20dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>